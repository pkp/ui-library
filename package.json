{
  "name": "ui-library",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "serve": "vue-cli-service serve",
    "lint": "vue-cli-service lint"
  },
  "dependencies": {
    "@headlessui/vue": "^1.7.15",
    "@lk77/vue3-color": "^3.0.6",
    "chart.js": "^4.3.3",
    "clone-deep": "^4.0.1",
    "core-js": "^3.8.0",
    "debounce": "^1.2.0",
    "dedent": "^0.7.0",
    "element-resize-event": "^3.0.6",
    "highlight.js": "^10.4.1",
    "html-entities": "^1.3.1",
    "marked": "^4.2.4",
    "moment": "^2.29.4",
    "raw-loader": "^4.0.0",
    "tiny-emitter": "^2.1.0",
    "uuid": "^9.0.0",
    "vue": "^3.3.4",
    "vue-chartjs": "^5.2.0",
    "vue-draggable-plus": "^0.2.4",
    "vue-router": "^4.2.4"
  },
  "devDependencies": {
    "@babel/core": "^7.12.16",
    "@babel/eslint-parser": "^7.12.16",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vue/cli-plugin-babel": "^5.0.0",
    "@vue/cli-plugin-eslint": "^5.0.0",
    "@vue/cli-service": "^5.0.0",
    "@vue/eslint-config-prettier": "^7.0.0",
    "autoprefixer": "^10.4.14",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^8.0.3",
    "less": "^4.0.0",
    "less-loader": "^8.0.0",
    "lint-staged": "^11.0.1",
    "postcss": "^8.4.27",
    "tailwindcss": "^3.3.3",
    "vite": "^4.4.9",
    "vite-plugin-raw": "^1.0.3",
    "vue-template-compiler": "^2.6.14"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "@vue/prettier"
    ],
    "globals": {
      "$": true,
      "pkp": true
    },
    "rules": {
      "prettier/prettier": [
        "warn",
        {
          "bracketSpacing": false,
          "singleQuote": true,
          "useTabs": true,
          "htmlWhitespaceSensitivity": "ignore"
        }
      ],
      "no-unused-vars": [
        "error",
        {
          "args": "none"
        }
      ],
      "vue/multi-word-component-names": "off"
    },
    "parserOptions": {
      "parser": "@babel/eslint-parser"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {},
      "tailwindcss": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "ie >= 10"
  ],
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "vue-cli-service lint",
      "git add"
    ]
  }
}
