{
  "name": "ui-library",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "build-docs": "env PKP_DOCS=1 vue-cli-service build",
    "lint": "vue-cli-service lint"
  },
  "dependencies": {
    "@tinymce/tinymce-vue": "^1.1.0",
    "debounce": "^1.2.0",
    "dedent": "^0.7.0",
    "highlight.js": "^9.13.1",
    "html-entities": "^1.2.1",
    "marked": "^0.5.1",
    "raw-loader": "^1.0.0",
    "tinymce": "^4.8.5",
    "v-tooltip": "^2.0.0-rc.33",
    "vue": "^2.5.21",
    "vue-color": "^2.7.0",
    "vue-router": "^3.0.1",
    "vue-scrollto": "^2.13.0",
    "vue-slider-component": "^2.8.0",
    "vue-tabs-component": "^1.5.0",
    "vue2-dropzone": "^3.5.2",
    "vuedraggable": "^2.16.0"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.3.0",
    "@vue/cli-plugin-eslint": "^3.3.0",
    "@vue/cli-service": "^3.3.0",
    "@vue/eslint-config-prettier": "^4.0.1",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.8.0",
    "eslint-plugin-vue": "^5.0.0",
    "less": "^3.0.4",
    "less-loader": "^4.1.0",
    "lint-staged": "^8.1.0",
    "vue-template-compiler": "^2.5.21"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "@vue/prettier"
    ],
    "globals": {
      "$": true,
      "pkp": true
    },
    "rules": {
      "prettier/prettier": [
        "warn",
        {
          "bracketSpacing": false,
          "singleQuote": true,
          "useTabs": true
        }
      ],
      "no-unused-vars": [
        "error",
        {
          "args": "none"
        }
      ]
    },
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 10"
  ],
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "vue-cli-service lint",
      "git add"
    ],
    "*.vue": [
      "vue-cli-service lint",
      "git add"
    ]
  }
}
