{
  "name": "ui-library",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint"
  },
  "dependencies": {
    "@tinymce/tinymce-vue": "^3",
    "chart.js": "^2.9.4",
    "clone-deep": "^4.0.1",
    "core-js": "^3.8.0",
    "debounce": "^1.2.0",
    "dedent": "^0.7.0",
    "element-resize-event": "^3.0.3",
    "highlight.js": "^10.4.1",
    "html-entities": "^1.3.1",
    "marked": "^4.2.4",
    "moment": "^2.27.0",
    "raw-loader": "^4.0.0",
    "tinymce": "^5.10.0",
    "uuid": "^9.0.0",
    "v-tooltip": "^2.0.3",
    "vue": "^2.6.12",
    "vue-announcer": "^1.0.6",
    "vue-autosuggest": "^2.2.0",
    "vue-chartjs": "^3.5.1",
    "vue-color": "^2.7.1",
    "vue-js-modal": "^1.3.35",
    "vue-router": "^3.4.9",
    "vue-scrollto": "^2.20.0",
    "vue2-dropzone": "^3.6.0",
    "vuedraggable": "^2.24.3"
  },
  "devDependencies": {
    "@babel/core": "^7.12.16",
    "@babel/eslint-parser": "^7.12.16",
    "@vue/cli-plugin-babel": "^5.0.0",
    "@vue/cli-plugin-eslint": "^5.0.0",
    "@vue/cli-service": "^5.0.0",
    "@vue/eslint-config-prettier": "^7.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^8.0.3",
    "less": "^4.0.0",
    "less-loader": "^8.0.0",
    "lint-staged": "^11.0.1",
    "vue-template-compiler": "^2.6.14"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "@vue/prettier"
    ],
    "globals": {
      "$": true,
      "pkp": true
    },
    "rules": {
      "prettier/prettier": [
        "warn",
        {
          "bracketSpacing": false,
          "singleQuote": true,
          "useTabs": true,
          "htmlWhitespaceSensitivity": "ignore"
        }
      ],
      "no-unused-vars": [
        "error",
        {
          "args": "none"
        }
      ],
      "vue/multi-word-component-names": "off"
    },
    "parserOptions": {
      "parser": "@babel/eslint-parser"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "ie >= 10"
  ],
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "vue-cli-service lint",
      "git add"
    ],
    "*.vue": [
      "vue-cli-service lint",
      "git add"
    ]
  }
}
