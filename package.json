{
  "name": "ui-library",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "build-docs": "env PKP_DOCS=1 vue-cli-service build"
  },
  "dependencies": {
    "@tinymce/tinymce-vue": "^1.1.2",
    "chart.js": "^2.9.3",
    "core-js": "^3.4.4",
    "debounce": "^1.2.0",
    "dedent": "^0.7.0",
    "highlight.js": "^9.17.1",
    "html-entities": "^1.2.1",
    "marked": "^0.7.0",
    "raw-loader": "^1.0.0",
    "tinymce": "^4.9.10",
    "v-tooltip": "^2.0.2",
    "vue": "^2.6.11",
    "vue-autosuggest": "^2.0.4",
    "vue-chartjs": "^3.5.0",
    "vue-color": "^2.7.0",
    "vue-router": "^3.1.4",
    "vue-scrollto": "^2.17.1",
    "vue2-dropzone": "^3.6.0",
    "vuedraggable": "^2.23.2"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^4.3.1",
    "@vue/cli-plugin-eslint": "^4.3.1",
    "@vue/cli-service": "^4.3.1",
    "@vue/eslint-config-prettier": "^4.0.1",
    "babel-eslint": "^10.0.3",
    "element-resize-event": "^3.0.3",
    "eslint": "^5.16.0",
    "eslint-plugin-vue": "^5.2.3",
    "less": "^3.10.3",
    "less-loader": "^4.1.0",
    "lint-staged": "^8.2.1",
    "vue-template-compiler": "^2.6.11"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "@vue/prettier"
    ],
    "globals": {
      "$": true,
      "pkp": true
    },
    "rules": {
      "prettier/prettier": [
        "warn",
        {
          "bracketSpacing": false,
          "singleQuote": true,
          "useTabs": true,
          "htmlWhitespaceSensitivity": "ignore"
        }
      ],
      "no-unused-vars": [
        "error",
        {
          "args": "none"
        }
      ]
    },
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 10"
  ],
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "vue-cli-service lint",
      "git add"
    ],
    "*.vue": [
      "vue-cli-service lint",
      "git add"
    ]
  }
}
